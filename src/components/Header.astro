---
import Logo from "./Logo.astro";

---

<header class="bg-primary shadow-sm">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <div>
      <a href="/" class="text-2xl font-bold text-primary flex items-center gap-0.5">
        <Logo />
        Fernando Lis
      </a>
    </div>
    <nav class="hidden md:flex space-x-6">
      <a href="/login" class="text-primary hover:text-amber-500 px-3 py-2 rounded-md transition-all duration-300 ease-in-out transform hover:scale-105 font-medium">INGRESAR</a>
      <a href="/quienes-somos" class="text-primary hover:text-amber-500 px-3 py-2 rounded-md transition-all duration-300 ease-in-out transform hover:scale-105 font-medium">QUIENES SOMOS</a>
      <a href="/contacto" class="text-primary hover:text-amber-500 px-3 py-2 rounded-md transition-all duration-300 ease-in-out transform hover:scale-105 font-medium">CONTACTO</a>
    </nav>
    <button class="md:hidden text-primary" aria-label="Menu">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
  <!-- Mobile menu, hidden by default -->
  <div class="md:hidden hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a href="/login" class="block px-3 py-2 text-primary hover:text-amber-500 rounded-md transition-all duration-300 ease-in-out transform hover:scale-105 font-medium">INGRESAR</a>
      <a href="/quienes-somos" class="block px-3 py-2 text-primary hover:text-amber-500 rounded-md transition-all duration-300 ease-in-out transform hover:scale-105 font-medium">QUIENES SOMOS</a>
      <a href="/contacto" class="block px-3 py-2 text-primary hover:text-amber-500 rounded-md transition-all duration-300 ease-in-out transform hover:scale-105 font-medium">CONTACTO</a>
    </div>
  </div>
</header>
